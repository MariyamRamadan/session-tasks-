def print_double_half_pyramid(h):
    if h < 1 or h > 8:
        print("invalid number,please enter a number between 1 and 8:")
        return
    
    for i in range(1, h+1):
        print(" " * (h-i), end=" ")
        print("#" * i, end=" ")
        print("#" * i)

while True:
    try:
        h = int(input("Enter the height of the pyramid from 1 to 8: \n"))
        if h < 1 or h > 8:
            print("Invalid input. Please try again.")
            continue

        print_double_half_pyramid(h)
        break
    except ValueError:
        print("Invalid number ")
